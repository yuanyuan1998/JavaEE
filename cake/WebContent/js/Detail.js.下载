    setTimeout(function () { $(".b1").focus() }, 100);
    setTimeout(function () { $(".b0").focus() }, 100);
    //购物车规格描述显示隐藏
    setTimeout(function () {
        $(".guige_list a").hover(
            function () {
                $(this).find("div").show();
            }, function () {
                $(this).find("div").hide();
            });
    }, 100);
    //购物车数量加减
    setTimeout(function () {
        $('.list_num').on('click', '.dd_num a', function () {
            var value = parseInt($(this).siblings(":text").val());
            if (isNaN(value))
                value = 1;

            if ($(this).attr("class") != "jian") {
                if (value > 1)
                    value--;
                $(this).siblings(":text").val(value);
            } else {
                if (value >= 20)
                    value = 20;
                else {
                    value++;
                }

                $(this).siblings(":text").val(value);
            }
        });
