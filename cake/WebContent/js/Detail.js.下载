    $("#DeliveryTimeHour").children().each(function (index, value) {
        if (sptime.length == 2) {

            var hour = $(value).val().substring(0, 2);
            if (hour >= parseInt(sptime[0]) && hour <= sptime[1]) {
                if ($(value).val().substring(0, 5).indexOf(sptime[1] + ":30") > -1) {
                    return false;
                }
                arrHour[indextemp] = $(value).val();
